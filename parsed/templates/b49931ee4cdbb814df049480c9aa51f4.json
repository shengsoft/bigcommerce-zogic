{"components/common/paginator":"<div class=\"pagination\">    \r\n    <ul class=\"pagination-list\">\r\n        {{#if previous}}\r\n            <li class=\"pagination-item pagination-item--previous\">\r\n                <a class=\"pagination-link\" href=\"{{previous}}\" {{#unless reload}}data-faceted-search-facet{{/unless}}><svg><use xlink:href=\"#icon-arrow-right\"></use></svg></a>\r\n            </li>\r\n        {{/if}}\r\n        {{#each links}}\r\n            {{#if this.number '==' ../current}}\r\n                <li class=\"pagination-item pagination-item--current\">\r\n                    <a class=\"pagination-link\" href=\"{{this.url}}\" {{#unless reload}}data-faceted-search-facet{{/unless}}>{{this.number}}</a>\r\n                </li>\r\n            {{else}}\r\n                <li class=\"pagination-item\">\r\n                    <a class=\"pagination-link\" href=\"{{this.url}}\" {{#unless reload}}data-faceted-search-facet{{/unless}}>{{this.number}}</a>\r\n                </li>\r\n            {{/if}}\r\n        {{/each}}\r\n\r\n        {{#if next}}\r\n            <li class=\"pagination-item pagination-item--next\">\r\n                <a class=\"pagination-link\" href=\"{{next}}\" {{#unless reload}}data-faceted-search-facet{{/unless}}><svg><use xlink:href=\"#icon-arrow-right\"></use></svg></a>\r\n            </li>\r\n        {{/if}}\r\n    </ul>\r\n</div>\r\n","components/products/ratings":"{{#for 1 5}}\r\n    {{#if ../this.rating '>=' $index}}\r\n        <i class=\"fa fa-star color\"></i>\r\n    {{else}}\r\n        <i class=\"fa fa-star\"></i>\r\n    {{/if}}\r\n{{/for}}\r\n{{{snippet 'product_rating'}}}\r\n","components/products/reviews":"{{#if reviews.total}}\r\n<section class=\"toggle productReviews\" id=\"product-reviews\" data-accordion-item data-product-reviews>\r\n   <h3 class=\"toggle-title is-active\">\r\n        {{lang 'products.reviews.header' total=reviews.total}}\r\n        <a class=\"toggleLink is-open\" data-collapsible href=\"#productReviews-content\">\r\n            <span class=\"toggleLink-text toggleLink-text--on\">\r\n                {{lang 'products.reviews.hide'}} <i class=\"fa fa-angle-down\"></i>\r\n            </span>\r\n            <span class=\"toggleLink-text toggleLink-text--off\">\r\n                {{lang 'products.reviews.show'}} <i class=\"fa fa-angle-down\"></i>\r\n            </span>\r\n        </a>\r\n    </h3>\r\n\r\n    <div class=\"toggle-content is-open\" id=\"productReviews-content\">\r\n        <ul class=\"productReviews-list\" id=\"productReviews-list\">\r\n            {{#each reviews.list}}\r\n            <li class=\"productReview\">\r\n                <article itemprop=\"review\" itemscope itemtype=\"http://schema.org/Review\">\r\n                    <header>\r\n                        <h5 itemprop=\"name\" class=\"productReview-title\">{{ title }}</h5>\r\n                        <span class=\"productReview-rating rating--small\" itemprop=\"reviewRating\" itemscope itemtype=\"http://schema.org/Rating\">\r\n                            {{> components/products/ratings rating=rating}}\r\n                            <span class=\"productReview-ratingNumber\" itemprop=\"ratingValue\">{{ rating }}</span>\r\n                        </span>\r\n                        {{#if name}}\r\n                            <meta itemprop=\"author\" content=\"{{name}}\">\r\n                            <p class=\"productReview-author\">\r\n                                {{lang 'products.reviews.post_on_by' date=date name=name }}\r\n                            </p>\r\n                        {{else}}\r\n                            <p class=\"productReview-author\">\r\n                                {{lang 'products.reviews.post_on_by' date=date name=(lang 'products.reviews.anonymous_poster')}}\r\n                            </p>\r\n                        {{/if}}\r\n                    </header>\r\n                    <p itemprop=\"reviewBody\" class=\"productReview-body\">{{nl2br text}}</p>\r\n                </article>\r\n            </li>\r\n            {{/each}}\r\n        </ul>\r\n\r\n        {{#if reviews.total '>' theme_settings.productpage_reviews_count}}\r\n            {{> components/common/paginator pagination.reviews}}\r\n        {{/if}}\r\n\r\n        <a class=\"btn btn-alt\" href=\"#\" data-reveal-id=\"modal-review-form\">{{lang 'products.reviews.write_a_review'}}</a>\r\n\r\n    </div>\r\n\r\n</section>\r\n{{else}}\r\n<section class=\"toggle productReviews\" id=\"product-reviews\" data-accordion-item data-product-reviews>\r\n    <h3 class=\"toggle-title\">\r\n        {{lang 'products.reviews.header' total=reviews.total}}\r\n        <a class=\"toggleLink is-open\" data-collapsible href=\"#productReviews-content\">\r\n            <span class=\"toggleLink-text toggleLink-text--on\">\r\n                {{lang 'products.reviews.hide'}} <i class=\"fa fa-angle-down\"></i>\r\n            </span>\r\n            <span class=\"toggleLink-text toggleLink-text--off\">\r\n                {{lang 'products.reviews.show'}} <i class=\"fa fa-angle-down\"></i>\r\n            </span>\r\n        </a>\r\n    </h3>\r\n    <div class=\"toggle-content text-center is-open\" id=\"productReviews-content\">\r\n        <div class=\"alert alert-warning\">\r\n            {{lang 'halothemes.no_reviews_yet'}}\r\n        </div>\r\n\r\n        <a class=\"btn btn-alt\" href=\"#\" data-reveal-id=\"modal-review-form\">{{lang 'products.reviews.write_a_review'}}</a>\r\n    </div>\r\n</section>\r\n{{/if}}\r\n{{{snippet 'reviews'}}}\r\n"}
